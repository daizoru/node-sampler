  "name": "sampler",
  "description": "Record things, play them back",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "git://github.com/daizoru/node-sampler.git"
  },
    "directories" : {
      "lib" : "./lib",
      "examples" : "./examples",
      "test" : "./test"
    },
  "main" : "./lib/sampler",
  "scripts" : {
    "build" : "coffee --compile --output lib/ src/",
    "watch" : "coffee --watch --compile --output lib/ src/", 
    "test" : "mocha",
    "html" : "mocha --reporter doc"
  },
  "engines": {
    "node": "0.6.x || 0.7.x"
  },
  "dependencies": {
     "pkginfo"           : "0.2.x",
     "moment"            : "1.6.x",
     "underscore"        : "1.3.1"
  },
  "devDependencies": {
    "mocha": "1.1.x",
    "should" : "0.6.x",
    "coffee-script" : "1.3.x"
  }
}